<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Album Art -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchBtn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#1E1E1E"
            android:padding="12dp"
            app:cornerRadius="22dp"
            app:icon="@drawable/ic_search"
            app:iconTint="#7E7E7E"
            app:iconSize="22dp"
            app:layout_constraintEnd_toStartOf="@+id/songListBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp" />
<!--        style="@style/Widget.Material3.Button.IconButton"-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/songListBtn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="2dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#1E1E1E"
            android:padding="13.5dp"
            app:cornerRadius="22dp"
            app:icon="@drawable/ic_list"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp" />

        <!-- SEARCH BAR -->

        <LinearLayout
            android:id="@+id/searchBarContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:elevation="16dp"
            android:visibility="gone"
            android:translationX="1000dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Search Header with rounded corners -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#2A2A2A"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <!-- Stylish back button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/searchBackBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="8dp"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_back"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="24dp"
                        app:iconTint="#7E7E7E"
                        android:backgroundTint="#3A3A3A"
                        app:strokeColor="#505050"
                        app:strokeWidth="1dp"
                        android:contentDescription="Close search"/>

                    <!-- Search input with better styling -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox"
                        app:boxBackgroundColor="#3A3A3A"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:hintTextColor="#88FFFFFF"
                        app:startIconDrawable="@drawable/ic_search"
                        app:startIconTint="#88FFFFFF"
                        android:hint="Search songs...">

                        <AutoCompleteTextView
                            android:id="@+id/searchInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#88FFFFFF"
                            android:textSize="16sp"
                            android:completionThreshold="1"
                            android:imeOptions="actionSearch"
                            android:dropDownHeight="0dp"
                            android:popupBackground="@android:color/transparent"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Stylish clear button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/searchClearBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="8dp"
                        app:cornerRadius="20dp"
                        app:icon="@android:drawable/ic_menu_close_clear_cancel"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="20dp"
                        app:iconTint="#FFFFFF"
                        android:backgroundTint="#3A3A3A"
                        app:strokeColor="#505050"
                        app:strokeWidth="1dp"
                        android:visibility="gone"
                        android:contentDescription="Clear search"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Subtle divider with gradient effect -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"/>

            <!-- Search Results -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchResultsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="400dp"
                android:background="#1E1E1E"
                android:clipToPadding="false"
                android:paddingTop="8dp"/>

            <!-- No Results Text with icon -->
            <LinearLayout
                android:id="@+id/searchNoResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”"
                    android:textSize="48sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No songs found"
                    android:textColor="#88FFFFFF"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="124dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/songThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/thumb_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.cardview.widget.CardView>

        <!-- Song Title -->
        <TextView
            android:id="@+id/songTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Song Title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <!-- Slider -->
        <!-- Controls -->

        <com.google.android.material.slider.Slider
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:haloRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:thumbColor="@color/seekbar_thumb"
            app:thumbHeight="36dp"
            app:thumbRadius="12dp"
            app:thumbTint="@color/seekbar_thumb"
            app:trackColorActive="@color/seekbar_active"
            app:trackColorInactive="@color/seekbar_inactive"
            app:trackHeight="8dp" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="418dp"
            android:layout_height="96dp"
            android:layout_marginBottom="44dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Previous -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/prevBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:backgroundTint="#1E1E1E"
                android:padding="20dp"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_prev"
                app:iconGravity="start"
                app:iconPadding="0dp"
                app:iconTint="#FFFFFF"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp" />

            <!-- Loop -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loopBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:backgroundTint="#1E1E1E"
                android:padding="18dp"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_loop"
                app:iconGravity="start"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="@color/loop_off"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp" />

            <!-- Play -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/playBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="6dp"
                android:backgroundTint="#C1C1C1"
                android:padding="21.5dp"
                app:cornerRadius="38dp"
                app:elevation="14dp"
                app:icon="@drawable/ic_play"
                app:iconGravity="start"
                app:iconPadding="0dp"
                app:iconSize="26dp"
                app:iconTint="#000000"
                app:strokeColor="#88000000"
                app:strokeWidth="2dp" />

            <!-- Pause -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/pauseBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:backgroundTint="#1E1E1E"
                android:padding="20dp"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_pause"
                app:iconGravity="start"
                app:iconPadding="0dp"
                app:iconTint="#FFFFFF"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp" />

            <!-- Download -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/downloadBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:backgroundTint="#1E1E1E"
                android:padding="18.5dp"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_download"
                app:iconGravity="start"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="#FFFFFF"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp" />

            <!-- Next -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="6dp"
                android:backgroundTint="#1E1E1E"
                android:padding="20dp"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_next"
                app:iconGravity="start"
                app:iconPadding="0dp"
                app:iconTint="#FFFFFF"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="0:00"
            android:textColor="#88FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/seekBar"
            app:layout_constraintTop_toBottomOf="@id/seekBar" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="0:00"
            android:textColor="#88FFFFFF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/seekBar"
            app:layout_constraintTop_toBottomOf="@id/seekBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Optional overlay -->
    <FrameLayout
        android:id="@+id/particleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
